html
    head 
        title BikeWithUs admin
        link(rel="stylesheet" href="/GUI/assets/CSS/core.css")
        link(rel="preconnect" href="https://fonts.googleapis.com")
        link(rel="preconnect" href="https://fonts.gstatic.com" crossorigin)
        link(href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,300;0,400;0,500;0,700;0,900;1,100&display=swap" rel="stylesheet")

    //body
    body 
        main 
            h2 BikeWithUs admin og buschauffør login
            form(action='/login', method='post')
                label(for='username') Brugernavn
                input(type='text', id='username', name='username', required)

                label(for='password') Adgangskode
                input(type='password', id='password', name='password', required)

                button(type='submit', name='action', value='login') Login Admin
                button(type='submit', name='action', value='register') Login buschauffør